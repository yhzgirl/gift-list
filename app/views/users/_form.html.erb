<%= form_for @user do |f| %>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email %><br/>

  <%= f.label :password, "Password" %>
  <%= f.password_field :password %><br/>

  <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation %><br/>

  <%= f.submit %>
<% end %>